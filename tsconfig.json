{
    "compilerOptions": {
      "experimentalDecorators": true,
      "strict": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "target": "es2016",
      "lib": ["esnext"],
      "outDir": "build",
      "sourceMap": false,
      "isolatedModules": true
    },
    "include": [
      "src/**/*", "test/**/*"
    ],
    "exclude": ["node_modules"],
    "files": null
}